@{
    ViewData["Title"] = "Editer un CV";
}
<div id="contenue">
<h1>@ViewData["Title"]</h1>    
    <form action="traitement.php" method="post">
        <h3>Cursus :</h3>
        <div id="cursus-container">
            <!-- Les champs "Critère" et "Coefficient" seront ajoutés ici -->
        </div>
        <button type="button" id="ajouter-cursus">Ajouter</button><br>

        <h3>Experiences Professionnelles :</h3>

        <div id="experiences-container">
            <!-- Les champs "Critère" et "Coefficient" seront ajoutés ici -->
        </div>
        <button type="button" id="ajouter-experience">Ajouter</button><br>

        <input type="submit" value="Soumettre" id="but">
    </form>
</div>
    <script>
        // Fonction pour ajouter dynamiquement des champs "Critère" et "Coefficient"
        document.getElementById("ajouter-cursus").addEventListener("click", function () {
            var container = document.getElementById("cursus-container");
            ajouterChamp(container, "cursus-critere[]","cursus-niveau[]", "cursus-coefficient[]");
        });

        document.getElementById("ajouter-experience").addEventListener("click", function () {
            var container = document.getElementById("experiences-container");
            ajouterChamp(container, "experience-critere[]", "experience-coefficient[]");
        });

        function ajouterChamp(container, nomCritere,nomNiveau, nomCoefficient) {
            // Créez un div pour chaque paire de champs
            var champContainer = document.createElement("div");

            // Créez un élément "input" pour le critère
            var inputCritere = document.createElement("input");
            inputCritere.type = "text";
            inputCritere.placeholder = "Critère";
            inputCritere.name = nomCritere;

            var inputNiveau = document.createElement("input");
            inputNiveau.type = "number";
            inputNiveau.placeholder = "Niveau";
            inputNiveau.name = nomNiveau;

            // Créez un élément "input" pour le coefficient
            var inputCoefficient = document.createElement("input");
            inputCoefficient.type = "number";
            inputCoefficient.placeholder = "Coefficient";
            inputCoefficient.name = nomCoefficient;

            // Ajoutez les éléments au conteneur
            champContainer.appendChild(inputCritere);
            champContainer.appendChild(inputNiveau);
            champContainer.appendChild(inputCoefficient);

            // Ajoutez le conteneur au conteneur principal
            container.appendChild(champContainer);
        }
    </script>

